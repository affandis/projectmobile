<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regisback"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/register_input"
        android:layout_margin="25dp"
        />

    <RelativeLayout
        android:id="@+id/register_input"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/input_design"
        >

        <EditText
            android:id="@+id/register_name_input"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Full Name"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_perm_identity"
            android:drawablePadding="20dp"
            />

        <View
            android:id="@+id/v_separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/register_name_input"
            android:background="#E8E9E8"
            />

        <EditText
            android:id="@+id/register_username_input"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/v_separator"
            android:layout_marginTop="-1dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Username"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="20dp"
            />

        <View
            android:id="@+id/v_separator1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/register_username_input"
            android:background="#E8E9E8"
            />

        <EditText
            android:id="@+id/register_email_input"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/v_separator1"
            android:layout_marginTop="-1dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="20dp"
            />

        <View
            android:id="@+id/v_separator2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/register_email_input"
            android:background="#E8E9E8"
            />

        <EditText
            android:id="@+id/register_phoneNumber_input"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/v_separator2"
            android:layout_marginTop="-1dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="20dp"
            />

        <View
            android:id="@+id/v_separator3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/register_phoneNumber_input"
            android:background="#E8E9E8"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_separator3"
            android:layout_marginTop="-1dp"
            app:passwordToggleEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_password_input"
                android:layout_width="355dp"
                android:layout_height="45dp"
                android:backgroundTint="#00FFFFFF"
                android:baselineAligned="false"
                android:paddingLeft="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_input"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Create Account"
        android:textColor="@color/white"
        />

</RelativeLayout>