<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please confirm your shipment details"
        android:textSize="18dp"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/shipment_input"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:layout_below="@id/txt"
        android:layout_marginTop="15dp"
        >

        <EditText
            android:id="@+id/shipment_name"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Name"
            android:inputType="text"
            />

        <View
            android:id="@+id/v_separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/shipment_name"
            android:background="#E8E9E8"
            />

        <EditText
            android:id="@+id/shipment_phone_number"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/v_separator"
            android:layout_marginTop="-1dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Phone Number"
            android:inputType="phone"
            />

        <View
            android:id="@+id/v_separator1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/shipment_phone_number"
            android:background="#E8E9E8"
            />

        <EditText
            android:id="@+id/shipment_address"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/v_separator1"
            android:layout_marginTop="-1dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Home Address"
            android:inputType="textMultiLine"
            />

        <View
            android:id="@+id/v_separator2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/shipment_address"
            android:background="#E8E9E8"
            />

        <EditText
            android:id="@+id/shipment_city"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/v_separator2"
            android:layout_marginTop="-1dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="City Name"
            android:inputType="text"
            />

        <View
            android:id="@+id/v_separator3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/shipment_city"
            android:background="#E8E9E8"
            />

        <EditText
            android:id="@+id/shipment_province"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/v_separator3"
            android:layout_marginTop="-1dp"
            android:backgroundTint="#FFF"
            android:paddingLeft="20dp"
            android:hint="Province"
            android:inputType="text"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

</RelativeLayout>